<odoo>

    <record id="product_pricelist_form_view_inherit" model="ir.ui.view">
        <field name="name">product.pricelist.form.inherit</field>
        <field name="model">product.pricelist</field>
        <field name="inherit_id" ref="product.product_pricelist_view"/>
        <field name="arch" type="xml">
            <xpath expr="//tree[@groups='product.group_sale_pricelist']//field[@name='min_quantity']" position="after">
                <field name="compute_price"  string="Computation" optional="show"/>
                <field name="base" invisible="compute_price != 'formula'" optional="show"/>
            </xpath>
        </field>
    </record>

</odoo>
