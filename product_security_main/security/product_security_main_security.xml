<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- New high level group -->
        <record id="group_stock_supermanager" model="res.groups">
            <field name="name">Super Administrator</field>
            <field
                name="category_id"
                ref="base.module_category_operations_inventory"
            />
            <field 
                name="implied_ids"
                eval="[(4, ref('stock.group_stock_manager'))]"
            />
        </record>

        <!-- Disable product creation: System -->
        <record
            id="product.access_product_template_manager"
            model="ir.model.access"
        >
            <field eval="0" name="perm_create"/>
        </record>
        <record
            id="product.access_product_product_manager"
            model="ir.model.access"
        >
            <field eval="0" name="perm_create"/>
        </record>

        <!-- Disable product creation: Inventory -->
        <record
            id="stock.access_product_template_stock_manager"
            model="ir.model.access"
        >
            <field eval="0" name="perm_create"/>
        </record>
        <record
            id="stock.access_product_product_stock_manager"
            model="ir.model.access"
        >
            <field eval="0" name="perm_create"/>
        </record>

        <!-- Disable product creation: MRP -->
        <record
            id="mrp.access_product_template_mrp_manager"
            model="ir.model.access"
        >
            <field eval="0" name="perm_create"/>
        </record>
        <record
            id="mrp.access_product_product_mrp_manager"
            model="ir.model.access"
        >
            <field eval="0" name="perm_create"/>
        </record>

        <!-- Disable product creation: Sales -->
        <record
            id="sale.access_product_template_sale_manager"
            model="ir.model.access"
        >
            <field eval="0" name="perm_create"/>
        </record>
        <record
            id="sale.access_product_product_sale_manager"
            model="ir.model.access"
        >
            <field eval="0" name="perm_create"/>
        </record>

        <!-- Disable product creation: Purchase -->
        <record
            id="purchase.access_product_template_purchase_manager"
            model="ir.model.access"
        >
            <field eval="0" name="perm_create"/>
        </record>
        <record
            id="purchase.access_product_product_purchase_manager"
            model="ir.model.access"
        >
            <field eval="0" name="perm_create"/>
        </record>

        <!-- Disable product creation: Accounting -->
        <record
            id="account.access_product_template_account_manager"
            model="ir.model.access"
        >
            <field eval="0" name="perm_create"/>
        </record>
        <record
            id="account.access_product_product_account_manager"
            model="ir.model.access"
        >
            <field eval="0" name="perm_create"/>
        </record>
    </data>

    <data noupdate="1">
        <record id="product_template_supermanager_rule" model="ir.rule">
            <field name="name">Product Template Super Administrator Rule</field>
            <field name="model_id" ref="product.model_product_template" />
            <field name="domain_force">[(1,'=',1)]</field>
            <field eval="0" name="perm_read"/>
            <field eval="0" name="perm_write"/>
            <field eval="1" name="perm_create"/>
            <field eval="0" name="perm_unlink"/>
            <field name="groups" eval="[(4, ref('group_stock_supermanager'))]" />
        </record>
        <record id="product_product_supermanager_rule" model="ir.rule">
            <field name="name">Product Super Administrator Rule</field>
            <field name="model_id" ref="product.model_product_product" />
            <field name="domain_force">[(1,'=',1)]</field>
            <field eval="0" name="perm_read"/>
            <field eval="0" name="perm_write"/>
            <field eval="1" name="perm_create"/>
            <field eval="0" name="perm_unlink"/>
            <field name="groups" eval="[(4, ref('group_stock_supermanager'))]" />
        </record>
    </data>    
</odoo>
