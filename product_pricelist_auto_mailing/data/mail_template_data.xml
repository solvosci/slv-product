<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="1">
        <record id="mail_template_data_pricelist_notification" model="mail.template">
            <field name="name">Pricelist Notification</field>
            <field name="email_from">${(False if not object else object.company_id.email or '') | safe}</field>
            <field name="email_to">${(False if not object else (', '.join(object.company_id.user_notified_for_price_changes_ids.mapped('email')) or '')) |safe}</field>
            <field name="model_id" ref="model_product_pricelist"/>
            <field name="subject">Pricelist modified</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        % for body in ctx.get('body', []):
                            ${body}<br/>
                        % endfor
                        <br/>
                        Please review. <br/>
                        Thanks.
                    </p>
                </div>
            </field>
        </record>
    </data>
</odoo>
